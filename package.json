{
  "name": "mini-ai-studio",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "npm run dev --prefix backend",
    "dev:client": "npm run dev --prefix frontend",
    "start": "concurrently \"npm run start:server\" \"npm run start:client\"",
    "start:server": "npm run start --prefix backend",
    "start:client": "npm run start --prefix frontend",
    "build": "npm run build --prefix frontend && npm run build --prefix backend",
    "postinstall": "npm run postinstall --prefix backend"
  },
  "devDependencies": {
    "concurrently": "^9.2.1"
  }
}
